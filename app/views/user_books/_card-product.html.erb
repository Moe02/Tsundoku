<div class="card-product">
  <div class="coverImg"><%= image_tag user_book.book.cover, class: "img-thumbnail" %></div>
    <div class="card-product-infos">
      <h1><%= user_book.book.title %></h1>
      <p><%= user_book.book.author %></p>
      <h2>Neighbor contact information</h2>
      <p><%= user_book.user.username %></p>
      <% if request %>
        <div class="d-flex">
          <% if request.pending? %>
            <%= simple_form_for request do |f| %>
              <%= f.input :status, as: :hidden, input_html: {value: "accepted"} %>
              <%= f.submit "Accept", class: "btn btn-primary" %>
            <% end %>
            <%= simple_form_for request do |f| %>
              <%= f.input :status, as: :hidden, input_html: {value: "rejected"} %>
              <%= f.submit "Reject", class: "btn btn-danger" %>
            <% end %>
            <% else %>
            <%= request.status %>
          <% end %>
        </div>
      <% end %>
    </div>
</div>
