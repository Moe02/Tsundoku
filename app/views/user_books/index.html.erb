<div class="container">
  <div class="search-user-books my-3">
    <%= form_tag(user_books_path, :method => "get", class: 'navbar-form navbar-left') do %>
      <div class="input-group">
        <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
        <div class="input-group-btn">
          <%= button_tag "Search", :class => 'btn btn-info',:name => nil%>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @user_books.each do |user_book|%>
          <div class="card-user-book" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.3)), url(
              <% if user_book.book.cover == "" %>
                'https://collegeinfogeek.com/wp-content/uploads/2018/11/Essential-Books.jpg'
              <% else %>
                <%= user_book.book.cover %>
              <% end %>
              )">
            <p><%= link_to user_book.book.title, user_book_path(user_book) %></p>
            <p><%= user_book.book.author %></p>
            <h2><%= user_book.user.username %></h2>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
