<div class="container">
  <div class="row">
    <div class="col">
      <div class="card-product">
        <div class="coverImg"><%= image_tag @user_book.book.cover, class: "img-thumbnail" %></div>
          <div class="card-product-infos">
            <h1><%= @user_book.book.title %></h1>
            <p><%= @user_book.book.author %></p>
            <h2>Neighbor contact information</h2>
            <p><%= @user.username %></p>
            <p><%= link_to 'Back to list', user_books_path, class: "btn btn-warning btn-pill btn-lg" %></p>
          </div>
      </div>
      <div class="my-3">
        <h3>Want to read this book?</h3>
        <%= simple_form_for [ @user_book, @request ] do |f| %>
        <div class="form-inline">
          <%= f.input :start_date, html5: true %><%= f.input :end_date, html5: true %><%= f.submit "Send request", class: "btn btn-warning" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
